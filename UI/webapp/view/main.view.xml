<mvc:View controllerName="local.HybridProject.controller.main"
          xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout"
          xmlns:u="sap.ui.unified" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <App>
        <Page title="{i18n>title}">
            <content>
                <Panel height="auto" width="100%" headerText="For Customers" expandable="true" expanded="true"
                       expandAnimation="true" backgroundDesign="Solid">
                    <content>
                        <HBox alignItems="Center">


                            <VBox class="sapUiSmallMargin">

                                <Text
                                     text="City">
                                </Text>
                                <Select
                                    id="cityList">
                                </Select>
                            </VBox>

                            <VBox class="sapUiSmallMargin">
                                <Text
                                        text="Cuisine">
                                </Text>
                                <Select
                                        id="cuisineList">
                                </Select>
                            </VBox>

                            <VBox class="sapUiSmallMargin">
                                <Text
                                        text="Minimum Price">
                                </Text>
                                <Select
                                        id="minimumPriceList">
                                </Select>
                            </VBox>

                            <VBox class="sapUiSmallMargin">
                                <Text
                                        text="Maximum Price">
                                </Text>
                                <Select
                                        id="maximumPriceList"
                                        selectedKey="maxPrice">
                                </Select>
                            </VBox>

                            <VBox class="sapUiSmallMargin">
                                <Text>

                                </Text>
                                <Button
                                    text="Search"
                                    press="pressedButton">

                                </Button>
                            </VBox>


                        </HBox>






                    </content>
                </Panel>
                <Panel height="auto" width="100%" headerText="For Restaurants" expandable="true" expanded="false"
                       expandAnimation="true" backgroundDesign="Solid">
                    <content>



                    </content>
                </Panel>
            </content>
        </Page>
    </App>
</mvc:View>